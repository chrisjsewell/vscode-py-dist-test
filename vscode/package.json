{
  "name": "test-lsp",
  "version": "0.0.2",
  "description": "Test Language Server",
  "publisher": "chrisjsewell",
  "author": "Chris Sewell",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/chrisjsewell/vscode-py-dist-test"
  },
  "engines": {
    "vscode": "^1.75.0"
  },
  "activationEvents": [
    "onLanguage:markdown"
  ],
  "contributes": {
    "commands": [
      {
        "title": "Restart language server",
        "category": "Test LSP",
        "command": "test-lsp.server.restart"
      }
    ]
  },
  "main": "./dist/extension",
  "devDependencies": {
    "@types/node": "^22.7.7",
    "@types/vscode": "^1.75.1",
    "@typescript-eslint/eslint-plugin": "^7.1.0",
    "@typescript-eslint/parser": "^7.1.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "esbuild": "^0.24.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "npm-run-all": "^4.1.5",
    "prettier": "3.3.3",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  },
  "scripts": {
    "lint": "eslint ./src --ext .ts",
    "lint:fix": "eslint ./src --ext .ts --fix",
    "compile": "npm run check-types && node esbuild.mjs",
    "check-types": "tsc --noEmit",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.mjs --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "test:compile": "node esbuild-tests.mjs",
    "test": "npm run compile && npm run test:compile && vscode-test",
    "package": "npm run check-types && node esbuild.mjs --production",
    "vscode:prepublish": "npm run package"
  }
}
